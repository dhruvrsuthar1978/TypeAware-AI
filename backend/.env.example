# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/typeaware

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-at-least-32-characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-also-make-it-long-and-random

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
REPORT_RATE_LIMIT_WINDOW_MS=60000
REPORT_RATE_LIMIT_MAX_REQUESTS=10

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@typeaware.com
DEFAULT_ADMIN_PASSWORD=admin123456
DEFAULT_ADMIN_USERNAME=admin

# Security
BCRYPT_ROUNDS=12

# Analytics
ANALYTICS_UPDATE_INTERVAL=300000

# Logging
LOG_LEVEL=info